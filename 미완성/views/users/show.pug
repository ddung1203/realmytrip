extends ../layout

block content
  .container
    h1.main-title= user.name
          
    dl.row
      dt.col-sm-3 이메일
      dd.col-sm-9
        a(href=`mailto:${user.email}`)= user.email

      dt.col-sm-3 가입일
      dd.col-sm-9= user.createdAt
      
      if user.facebook.id
        dt.col-sm-3 페이스북
        dd.col-sm-9
          img.img-fluid.rounded-circle(src= user.facebook.photo)

    hr
    p 
      if (user.grade == '관리자')
        a.btn.btn-outline-secondary(href='/users/') 사용자목록
        | 
        a.btn.btn-outline-primary(href=`/users/${user._id}/editadmin`) 편집
        | 
        a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) 삭제
      else
        if (currentUser)
          if (currentUser.id == user._id)
            a.btn.btn-outline-primary(href=`/users/${user._id}/edit`) 편집
            | 
            a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) 삭제